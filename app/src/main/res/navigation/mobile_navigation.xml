<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/menu_newRecord">

    <fragment
        android:id="@+id/menu_newRecord"
        android:name="studio.sanguine.loanshark2.ui.borrowers.BorrowersFragment"
        android:label="@string/title_borrowers"
        tools:layout="@layout/fragment_borrowers" >
        <argument
            android:name="isCreditor"
            app:argType="boolean"
            android:defaultValue="false"/>
        <action
            android:id="@+id/action_navigation_borrowers_to_navigation_creditors"
            app:destination="@id/menu_search"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/home_fragment"/>
        <action
            android:id="@+id/action_navigation_borrowers_to_navigation_contacts"
            app:destination="@id/menu_sort"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/home_fragment"/>
        <action
            android:id="@+id/action_navigation_borrowers_to_navigation_history"
            app:destination="@id/navigation_history"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/home_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/menu_search"
        android:name="studio.sanguine.loanshark2.ui.borrowers.BorrowersFragment"
        android:label="@string/title_creditors"
        tools:layout="@layout/fragment_borrowers">
        <argument
            android:name="isCreditor"
            app:argType="boolean"
            android:defaultValue="true"/>
        <action
            android:id="@+id/action_navigation_creditors_to_navigation_borrowers"
            app:destination="@id/menu_newRecord"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/home_fragment"/>
        <action
            android:id="@+id/action_navigation_creditors_to_navigation_contacts"
            app:destination="@id/menu_sort"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/home_fragment"/>
        <action
            android:id="@+id/action_navigation_creditors_to_navigation_history"
            app:destination="@id/navigation_history"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/home_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/menu_sort"
        android:name="studio.sanguine.loanshark2.ui.contacts.ContactsFragment"
        android:label="@string/title_contacts"
        tools:layout="@layout/fragment_contacts"
        >
        <action
            android:id="@+id/action_navigation_contacts_to_navigation_borrowers"
            app:destination="@id/menu_newRecord"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/home_fragment"/>
        <action
            android:id="@+id/action_navigation_contacts_to_navigation_creditors"
            app:destination="@id/menu_search"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/home_fragment"/>
        <action
            android:id="@+id/action_navigation_contacts_to_navigation_history"
            app:destination="@id/navigation_history"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/home_fragment"/>
    </fragment>
    <fragment
        android:id="@+id/navigation_history"
        android:name="studio.sanguine.loanshark2.ui.history.HistoryFragment"
        android:label="@string/title_history"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_history_to_navigation_borrowers"
            app:destination="@id/menu_newRecord"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/home_fragment"/>
        <action
            android:id="@+id/action_navigation_history_to_navigation_creditors"
            app:destination="@id/menu_search"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/home_fragment"/>
        <action
            android:id="@+id/action_navigation_history_to_navigation_contacts"
            app:destination="@id/menu_sort"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/home_fragment"/>
    </fragment>
</navigation>